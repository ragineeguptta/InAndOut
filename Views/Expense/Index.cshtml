@model IEnumerable<InAndOut.Models.Expense>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
 <div class="row pt-4">
     <div class="col-6">
         <h2>Expenses Name</h2>
     </div>
     <div class="col-6">
         <a asp-controller="Expense" asp-action="Create" class="btn btn-primary">Add New Expenses</a>
     </div>
 </div>
 <br />
    @if (Model.Count() > 0)
    {
 <table class="table">
    <thead class="thead-dark">
        <tr>
            <th width="30%" scope="col">Expense</th>
            <th width="30%" scope="col">Amount</th>
        </tr>
    </thead>
    @foreach(var item in Model)
    {
        <tbody>
            <tr>
                <td width="30%">@item.ExpenseName</td>
                <td width="30%">@item.Amount</td>
            </tr>
        </tbody>
        }
        </table>
    }
    else
    {
        <p>No Expenses are available here</p>
    }
</div>

