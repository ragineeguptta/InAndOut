@model IEnumerable<InAndOut.Models.Fee>
@{
    ViewData["Title"] = "Index";
}

<h1>Index-Fee</h1>


<div class="container p-3">
 <div class="row pt-4">
     <div class="col-6">
         <h2>Students Name</h2>
     </div>
     <div class="col-6">
         <a asp-controller="Fee" asp-action="Create" class="btn btn-primary">Add New Fees</a>
     </div>
 </div>
 <br />
    @if (Model.Count() > 0)
    {
 <table class="table">
    <thead class="thead-dark">
        <tr>
            <th width="30%" scope="col">Sr. No.</th>
            <th width="30%" scope="col">Student Fee</th>
        </tr>
    </thead>
    @foreach(var item in Model)
    {
        <tbody>
            <tr>
                <td width="30%" scope="row">@item.Id</td>
                <td width="30%">@item.Amount</td>
                <td width="40%">
                    <div class="col-6 text-right">
         <a asp-controller="Fee" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Edit </a>
         <a asp-controller="Fee" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Delete </a>
     </div>
                </td>
            </tr>
        </tbody>
        }
        </table>
    }
    else
    {
        <p>No Students are available here</p>
    }
</div>
