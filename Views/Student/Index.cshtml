@model IEnumerable<InAndOut.Models.Student>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
 <div class="row pt-4">
     <div class="col-6">
         <h2>Students Name</h2>
     </div>
     <div class="col-6">
         <a asp-controller="Student" asp-action="Create" class="btn btn-primary">Add New Students</a>
     </div>
 </div>
 <br />
    @if (Model.Count() > 0)
    {
 <table class="table">
    <thead class="thead-dark">
        <tr>
            <th width="30%" scope="col">Sr. No.</th>
            <th width="30%" scope="col">Student Name</th>
            <th width="30%" scope="col">Student Stram</th>
            <th width="30%" scope="col">Date</th>
        </tr>
    </thead>
    @foreach(var item in Model)
    {
        DateTime date = Convert.ToDateTime(item.Date);
        <tbody>
            <tr>
                <td width="30%" scope="row">@item.Id</td>
                <td width="30%">@item.Name</td>
                <td width="30%">@item.Stream</td>
                <td width="30%">@date.ToString("MM/dd/yyyy")</td>
            </tr>
        </tbody>
        }
        </table>
    }
    else
    {
        <p>No Students are available here</p>
    }
</div>

